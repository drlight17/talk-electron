{
  "name": "talk-electron",
  "productName": "NC Talk Electron",
  "description": "Talk web embedded app",
  "keywords": [
    "nextcloud",
    "talk",
    "spreed",
    "electron",
    "win7"
  ],
  "icon": "icon.png",
  "main": "./main.js",
  "version": "1.0.0-RC3",
  "author": "Yuri Samoilov <root@drlight.fun>",
  "homepage": "https://github.com/drlight17/talk-electron",
  "build": {
    "npmRebuild": false,
    "appId": "com.electron.talk-electron",
    "productName": "NC Talk Electron",
    "afterPack": "./linux-sandbox-fix.js",
    "asar": true,
    "asarUnpack": [
      "**/node_modules/sharp/**/*",
      "**/node_modules/@img/**/*"
    ],
    "linux": {
      "icon": "icon.icns",
      "category": "Network",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "asarUnpack": "./icon.png"
    },
    "deb": {
      "afterInstall": "package-after-install.sh"
    },
    "rpm": {
      "afterInstall": "package-after-install.sh"
    },
    "mac": {
      "category": "public.app-category.social-networking",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "asarUnpack": "./icon.png"
    },
    "win": {
      "icon": "icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "msi",
          "arch": [
            "x64"
          ]
        }
      ],
      "asarUnpack": "./icon.png"
    }
  },
  "scripts": {
    "dist": "electron-builder",
    "start": "electron ."
  },
  "dependencies": {
    "@electron/packager": "latest",
    "@paymoapp/electron-shutdown-handler": "latest",
    "custom-electron-prompt": "latest",
    "electron-fetch": "^1.9.1",
    "electron-store": "^8.2.0",
    "https-proxy-agent": "latest",
    "keytar": "^7.9.0",
    "puppeteer": "latest",
    "sharp": "^0.32.6",
    "socks-proxy-agent": "latest",
    "systeminformation": "latest",
    "ws": "latest"
  },
  "devDependencies": {
    "@paymoapp/electron-shutdown-handler": "latest",
    "electron": "^22.3.27",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9"
  }
}
